@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <h1 class="text-dark">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <h4 class="text-dark">Create a new account.</h4>
                <hr />

                @if (!string.IsNullOrEmpty(Model.RegisterMessage)) 
                { 
                    <div class="text-danger">@Model.RegisterMessage</div>
                }

                <div class="form-group">
                    <label asp-for="Username" class="text-dark"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="text-dark"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="text-dark"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="text-dark"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="text-dark"></label>
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-info"></span>
                </div>
                <button type="submit" class="btn btn-primary" asp-action="RegisterUser">Register</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}